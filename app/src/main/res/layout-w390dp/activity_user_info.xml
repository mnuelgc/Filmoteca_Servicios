<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">
        <TextView
            android:id="@+id/userData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/userData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="148dp"
            android:layout_height="189dp"
            android:layout_marginStart="86dp"
            android:layout_marginEnd="87dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/fotoyo"
            app:layout_constraintTop_toBottomOf="@id/userData" />

        <TextView
            android:id="@+id/nameLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="@string/nameLayer"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView"/>

        <TextView
            android:id="@+id/nameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nameDefault"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/nameLayer"
            app:layout_constraintTop_toTopOf="@+id/nameLayer" />

        <TextView
            android:id="@+id/emailLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/emailLayer"
            app:layout_constraintStart_toStartOf="@id/nameLayer"
            app:layout_constraintTop_toBottomOf="@+id/nameLayer" />

        <TextView
            android:id="@+id/emailValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="emailefault@email.com"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/emailLayer"
            app:layout_constraintTop_toTopOf="@+id/emailLayer" />
        <Button
            android:id="@+id/singOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="60dp"
            android:text="@string/SingOut"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailLayer"
            />


</androidx.constraintlayout.widget.ConstraintLayout>